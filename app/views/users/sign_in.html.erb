<h1>會員登入</h1>

<%= form_for(@user, url: login_users_path) do |form| %>
  <div class="fields">
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: '請輸入 email' %>
  </div>

  <div class="fields">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit "登入" %>
<% end %>